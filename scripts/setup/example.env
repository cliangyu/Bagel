# BAGEL Environment Configuration
# Copy this file to .env in the project root and customize for your setup

# ==============================================================================
# Data Directories
# ==============================================================================

# Main data directory for all BAGEL datasets, outputs, and samples
# This should point to a location with sufficient storage (recommended: shared filesystem)
export BAGEL_DATA_DIR="/opt/hpcaas/.mounts/fs-0301404b74c8d22fd/home/leonlc/bagel-data"

# ==============================================================================
# Model Directories
# ==============================================================================

# Directory containing pretrained model weights
export BAGEL_MODEL_DIR="/data/users/leonlc"

# Specific model paths (customize as needed)
export BAGEL_MODEL_PATH="${BAGEL_MODEL_DIR}/BAGEL-7B-MoT"
export BAGEL_LLM_PATH="${BAGEL_MODEL_DIR}/hf/Qwen2.5-0.5B-Instruct"
export BAGEL_VAE_PATH="${BAGEL_MODEL_DIR}/flux/vae/ae.safetensors"
export BAGEL_VIT_PATH="${BAGEL_MODEL_DIR}/hf/siglip-so400m-14-980-flash-attn2-navit"

# ==============================================================================
# Training Configuration
# ==============================================================================

# Output directories for training runs
export BAGEL_OUTPUT_DIR="${BAGEL_DATA_DIR}/outputs"
export BAGEL_CHECKPOINT_DIR="${BAGEL_OUTPUT_DIR}/checkpoints"

# Weights & Biases configuration
export WANDB_PROJECT="bagel"
export WANDB_MODE="online"  # Set to "offline" for offline logging

# ==============================================================================
# CUDA Configuration
# ==============================================================================

# Specify which GPUs to use (comma-separated, e.g., "0,1,2,3")
export CUDA_VISIBLE_DEVICES="0,1,2,3"

# ==============================================================================
# Python Environment
# ==============================================================================

# Conda environment name (if using conda)
export BAGEL_CONDA_ENV="bagel"

# Add project to Python path
export PYTHONPATH="${PYTHONPATH}:$(pwd)"

# ==============================================================================
# Usage Notes
# ==============================================================================
#
# 1. Copy this file to project root: cp scripts/setup/example.env .env
# 2. Customize the paths above for your system
# 3. Source the file before running commands: source .env
# 4. Or load automatically in your shell profile (.bashrc, .zshrc, etc.)
#
